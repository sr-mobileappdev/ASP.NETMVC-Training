@using MedioClinic.Models.Account

@model MedioClinic.Models.PageViewModel<ResetPasswordViewModel>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <h4>@Html.Localize("PassReset.Title")</h4>
            @Html.DisplayFor(m => m.UserMessage)
        </div>
        <div class="row section">
            <div class="col l6 m12 s12">
                <p>
                    @* TODO: Style error messages *@
                    @Html.ValidationSummary()
                    @Html.HiddenFor(m => m.Data.UserId)
                    @Html.HiddenFor(m => m.Data.Token)
                    <div class="row kn-row-margin">
                        <div class="input-field col s10">
                            @Html.PasswordFor(m => m.Data.PasswordConfirmationViewModel.Password, new { @class = "validate", placeholder = Html.DisplayNameFor(m => m.Data.PasswordConfirmationViewModel.Password) })
                        </div>
                    </div>
                    <div class="row kn-row-margin">
                        <div class="input-field col s10">
                            @Html.PasswordFor(m => m.Data.PasswordConfirmationViewModel.ConfirmPassword, new { @class = "validate", placeholder = Html.DisplayNameFor(m => m.Data.PasswordConfirmationViewModel.ConfirmPassword) })
                        </div>
                    </div>
                    <div class="row kn-row-margin">
                        <div>
                            <button class="btn waves-effect waves-light red darken-3" type="submit">@Html.Localize("PassReset.Title")</button>
                        </div>
                    </div>
                </p>
            </div>
            <div class="col l6 m12 s12">
                <img class="responsive-img kn-img-margin" src="@Url.Content("~/Content/Images/register-signin.jpg")">
            </div>
        </div>

    </div>
}