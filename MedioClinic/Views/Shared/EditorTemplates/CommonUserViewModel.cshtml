@model MedioClinic.Models.Profile.CommonUserViewModel

<div>@Html.ValidationSummary()</div>
<div class="kn-profile-wrapper">
    <div class="col s12 m4">
        <div class="kn-profile-infobox kn-text-center">

            @* Avatar support (begin) *@
            <div>
                <img src="@Url.Content(Model.AvatarContentPath)" alt="@Model.FullName" class="responsive-img" />
            </div>
            <div>
                @Html.TextBoxFor(m => m.AvatarFile, new { type = "file" })
            </div>
            @* Avatar support (end) *@

            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="kn-margin-m kn-padding-m kn-text-medium">
                            @Html.DisplayFor(m => m.FullName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="kn-small">
                            <a href="@Url.Action("ForgotPassword", "Account")">Reset password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="kn-profile-additional-info grey lighten-3">
            <div class="kn-row">
                <div class="col s12 m12">
                    <h6 class="blue-grey-text text-lighten-2 kn-bold section">
                        General information
                    </h6>
                </div>
                <div class="col s12 m6">
                    <div>@Html.HiddenFor(m => m.Id)</div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.FirstName)</div>
                        <div>@Html.EditorFor(m => m.FirstName)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.LastName)</div>
                        <div>@Html.EditorFor(m => m.LastName)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.DateOfBirth)</div>
                        <div>@Html.EditorFor(m => m.DateOfBirth)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.Gender)</div>
                        <div>@Html.EditorFor(m => m.Gender)</div>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.City)</div>
                        <div>@Html.EditorFor(m => m.City)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.Street)</div>
                        <div>@Html.EditorFor(m => m.Street)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.EmailViewModel.Email)</div>
                        <div>@Html.EditorFor(m => m.EmailViewModel.Email)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.Phone)</div>
                        <div>@Html.EditorFor(m => m.Phone)</div>
                    </div>
                    <div class="kn-row">
                        <div class="kn-bold">@Html.DisplayNameFor(m => m.Nationality)</div>
                        <div>@Html.EditorFor(m => m.Nationality, "CountrySelector")</div>
                    </div>
                </div>
            </div>
            <div class="kn-row">
                <button class="btn waves-effect waves-light red darken-3" type="submit" name="action">@Html.Localize("General.SaveChanges")</button>
            </div>
        </div>
    </div>
</div>