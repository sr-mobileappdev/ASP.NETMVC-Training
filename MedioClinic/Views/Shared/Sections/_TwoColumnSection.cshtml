@model ComponentViewModel<MedioClinic.Models.Sections.TwoColumnSectionProperties>

@{ 
    var leftColumnClass = $"l{Model.Properties.LeftColumnWidth}";
    var rightColumWidth = 12 - Model.Properties.LeftColumnWidth;
    var rightColumnClass = $"l{rightColumWidth}";
}

<div class="row section">
    <div class="col @leftColumnClass m6 s12">
        @Html.Kentico().WidgetZone()
    </div>
    <div class="col @rightColumnClass m6 s12">
        @Html.Kentico().WidgetZone()
    </div>
</div>